doctype html
include /../../static/assets/lib/ldui/pug/ldui.pug
include posts.pug
html
  head
    meta(charset="utf-8")
    link(href="https://fonts.googleapis.com/css2?family=Noto+Serif+TC:wght@300&display=swap",rel="stylesheet")
    +css("/assets/lib/bootstrap/4.3.1/css/bootstrap.min.css")
    +css("/assets/lib/ldui/ldui.min.css")
    style(type="text/css"): :stylus
      body .typeset.heading-contrast
        font-family: 'Noto Serif TC'
  body
    .w-1024.mx-auto.rwd.typeset.heading-contrast(style="padding:24px")
      h1.text-center.my-4.py-4.display-1: b Kirby'#[sup s]
      .d-flex.justify-content-around.flex-wrap
        each post in posts
          a.mb-4.pb-4.d-block(href=post.url.replace(/www\./,''),style="width:30%")
            .w-100.aspect-ratio.ratio-3by2.bg-cover.bg-portrait.bg-light.mb-1(
            style=`background-image:url(${post.img})`)
            .my-0.text-truncate #{post.text}

